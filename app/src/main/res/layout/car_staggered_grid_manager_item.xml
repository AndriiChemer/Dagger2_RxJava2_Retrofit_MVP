<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/card_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/textColorBlue">


            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:background="@drawable/no_image"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/brand_model_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorBlue"
                android:textSize="20dp"
                android:textStyle="bold"
                tool:text="Mercedes-Benz CLA"/>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brand_model_name"
                android:textColor="@color/textColorBlue"
                android:textSize="18dp"
                android:textStyle="bold"
                tool:text="27000 "/>

            <TextView
                android:id="@+id/pln"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorBlue"
                android:layout_toEndOf="@+id/price"
                android:layout_below="@+id/brand_model_name"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="@string/pln"/>

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="9dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/fuel_container"
                android:textColor="@color/textColorBlue"
                android:paddingStart="5dp"
                android:textSize="12dp"
                android:text="2008" />

            <LinearLayout
                android:id="@+id/fuel_container"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tool:ignore="RtlSymmetry">

                <ImageView
                    android:id="@+id/fuel_image"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/ic_fuel_station"/>

                <TextView
                    android:id="@+id/fuel_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorBlue"
                    android:layout_marginBottom="2dp"
                    android:textSize="12sp"
                    tool:text="Benzyna"/>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
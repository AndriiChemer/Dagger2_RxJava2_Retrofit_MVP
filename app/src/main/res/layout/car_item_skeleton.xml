<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="2dp"
    android:background="@android:color/transparent">

    <View
        android:id="@+id/price"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:background="@color/light_transparent"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/brand_model_name"
        app:layout_constraintStart_toStartOf="parent"
        tool:text="27000 PLN" />

    <View
        android:id="@+id/brand_model_name"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:background="@color/light_transparent"
        android:text="Mercedes-Benz CLA"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/fuel_type"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/fuel_type"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/fuel_image"
        android:background="@color/light_transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tool:text="Benzyna" />

    <View
        android:id="@+id/localization"
        android:layout_width="90dp"
        android:layout_height="15dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@+id/localization_marker"
        android:background="@color/light_transparent"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fuel_type"
        tool:text="Lublin" />
</android.support.constraint.ConstraintLayout>
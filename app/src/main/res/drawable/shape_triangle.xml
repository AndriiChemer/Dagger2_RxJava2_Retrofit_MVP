<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="-45"
            android:toDegrees="-45"
            android:pivotX="-45%"
            android:pivotY="17%">
            <shape android:shape="rectangle">
                <stroke
                    android:color="@color/view_selected_color"
                    android:width="30dp" />
                <solid android:color="@color/view_selected_color" />
            </shape>
        </rotate>
    </item>
</layer-list>
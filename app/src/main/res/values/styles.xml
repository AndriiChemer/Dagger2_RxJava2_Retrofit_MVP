<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="ButtonBlue" parent="Button">
        <item name="android:background">@drawable/rounded_button_blue_background</item>
        <item name="android:textColor">@color/textColorWhite</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="ButtonWhite" parent="Button">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/textColorBlue</item>
        <item name="android:layout_margin">10dp</item>
    </style>


    <style name="myDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@null</item>
        <item name="android:panelBackground">@null</item>
        <item name="android:windowBackground">@drawable/my_dialog_bg</item>
        <item name="android:useDefaultMargins">true</item>
        <item name="buttonBarStyle">@style/Widget.AppCompat.ButtonBar</item>
        <item name="buttonBarButtonStyle">@style/ArtaTechTheme.DialogButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/ArtaTechTheme.DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/ArtaTechTheme.DialogButton</item>
        <item name="buttonBarNeutralButtonStyle">@style/ArtaTechTheme.DialogButton</item>

    </style>

    <style name="ArtaTechTheme.DialogButton" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_selector</item>
        <item name="android:background">@drawable/btn_selector</item>
    </style>

</resources>
